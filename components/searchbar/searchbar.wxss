.search_body {
  width: 100%;
  background: #ddd;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.search_content {
  border: 1px solid white;
  width: 100%;
  height: 70rpx;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.search_content input {
  background: white;
  height: 100%;
  z-index: 1;
}

.search_text {
  position: absolute;
  overflow: hidden;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.tip {
  font-size: 24rpx;
  color: #aaa;
  letter-spacing:4rpx;
  margin-left: 10rpx;
}
