/* components/itemlist.wxss */

.itemlist_body {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  background: white;
  border-top: 10rpx solid whitesmoke;
  box-sizing: border-box;
}

.item_img {
  width: 200rpx;
  height: 200rpx;
  padding-left: 20rpx;
}

.item_img image {
  width: inherit;
  height: inherit;
}

.item_msg {
  padding-left: 30rpx;
  overflow: hidden;
}

.item_title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
}

.item_classifcation {
  font-size: 26rpx;
  padding: 4rpx 0;
}

.item_efficacy {
  font-size: 26rpx;
  padding: 8rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

