/* pages/pre_component/modal/modal.wxss */

page {
  width: 100%;
  height: 100%;
}

.wrapper {
  width: 100%;
  height: 100%;
  background: #666;
  opacity: 0.5;
  position: fixed;
  z-index: 100;
}

.modal_body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 12rpx;
  width: 550rpx;
  position: fixed;
  left: 50%;
  top: 15%;
  margin-left: -275rpx;
  background: white;
  z-index: 101;
}

.modal_title {
  font-size: 40rpx;
  height: 100rpx;
  background: #83ab99;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom: 2rpx solid #cdcdcd;
}

.modal_input {
  height: 120rpx;
  width: 100%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_body {
  width: 90%;
  height: 80rpx;
  border: 2rpx solid #cdcdcd;
  padding-left: 12rpx;
}

.warning {
  width: 90%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
  font-size: 26rpx;
  margin-top: -20rpx;
}

.warning text {
  width: 100%;
}

.modal_event {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  background: white;
  box-sizing: border-box;
  border-top: 2rpx solid #cdcdcd;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  position: relative;
}

.cancel_btn {
  width: 50%;
}

.cancel_btn::after {
  position: absolute;
  content: '';
  width: 0;
  height: 100%;
  border-left: 2rpx solid #cdcdcd;
  left: 50%;
  top: 0;
}

.confirm_btn {
  width: 50%;
}
