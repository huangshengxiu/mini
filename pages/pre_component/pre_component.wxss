/* pages/pre_component/pre_component.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left {
  padding-left: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left_img {
  width: 50rpx;
  height: 50rpx;
}

.left_text {
  padding-left: 10rpx;
}

.clear {
  width: 80rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clear_img {
  width: 40rpx;
  height: 40rpx;
}

.item_body {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  align-items: center;
}

.item_normal {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  background: #ddd;
  border-radius: 6rpx;
}

.repeat {
  background-color: lightcoral;
  color: black;
}

.resultcontent {
  display: flex;
  flex: 1 1 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.result_title {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  background: #efefef;
  padding: 0rpx 30rpx;
  border-bottom: 10rpx solid white;
  box-sizing: border-box;
}

.result_origin {
  font-size: 26rpx;
}

.distance {
  margin-top: -10rpx;
  line-height: 70rpx;
}

.footer {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ddd;
  font-size: 24rpx;
}

.tip {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  background: white;
}

.content {
  margin-top: -200rpx;
}

.content view {
  padding: 30rpx 20rpx 0rpx 10rpx;
  text-indent: 2em;
  line-height: 50rpx;
  font-size: 32rpx;
}
