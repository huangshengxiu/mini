/* pages/books/books.wxss */

.search_content {
  width: 100%;
  height: 100rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  background: #eee;
}

.content_main {
  width: 100%;
  height: 100%;
  background: white;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
}

.search_text {
  font-size: 30rpx;
  color: #aaa;
}

.book_title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: center;
  background: whitesmoke;
}

.icon {
  width: 100%;
  height: 400rpx;
  background: #eee;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.iconitem {
  width: 187rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 26rpx;
}

.iconitem image {
  width: 80rpx;
  height: 90rpx;
  opacity: 0.6;
}

.book_recommend {
  width: 100%;
  height: 60rpx;
  padding: 0rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: whitesmoke;
}

.leftview{
  font-size: 26rpx;
  opacity: .8;
}

.rightview{
  height: 100%;
  padding: 0rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.change_img {
  width: 30rpx;
  height: 30rpx;
  opacity: .6;
  margin-right: 10rpx;
}

.change_text{
  font-size: 20rpx;
  opacity: .6;
}
