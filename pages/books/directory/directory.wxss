/* pages/books/directory/directory.wxss */

page {
  width: 100%;
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #666;
  opacity: 0.5;
  z-index: 100;
}

.dir {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 15%;
  bottom: 10rpx;
  background: #f4f4f4;
  z-index: 101;
  border-radius: 30rpx;
}

.directory {
  width: 100%;
  height: 100%;
}

.title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}

.volume {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding-left: 30rpx;
  border-top: 2rpx solid #eee;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.chapter {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-top: 2rpx solid #eee;
  padding: 0rpx 60rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
  overflow: hidden;
}
