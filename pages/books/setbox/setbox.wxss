/* pages/books/setbox/setbox.wxss */

page {
  width: 100%;
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 100;
}

.setbox {
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: whitesmoke;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 101;
}

.wrapper {
  height: 100%;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #69594a;
}

.img {
  width: 60rpx;
  height: 60rpx;
}

.color {
  width: 100%;
  height: 250rpx;
  position: absolute;
  bottom: 120rpx;
  left: 0;
  right: 0;
  background: whitesmoke;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  z-index: 101;
  color: #69594a;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.fontsize {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 36rpx;
  width: 15%;
  height: 100rpx;
  line-height: 100rpx;
}

.botton {
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  border: 2rpx solid #ddd;
}

.bgc {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.colorstyle {
  width: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
}

.select {
  border: 5rpx solid orange;
}
