/* pages/pre_component/modal/modal.wxss */

page {
  width: 100%;
  height: 100%;
}

.modal_body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 12rpx;
  width: 550rpx;
  height: 300rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left: -275rpx;
  margin-top: -150rpx;
  background: white;
  z-index: 100;
}

.modal_title {
  font-size: 40rpx;
  height: 100rpx;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom: 2rpx solid #cdcdcd;
}

.modal_event {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  background: white;
  box-sizing: border-box;
  border-top: 2rpx solid #cdcdcd;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  position: relative;
}

.cancel_btn {
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel_btn::after {
  position: absolute;
  content: '';
  width: 0;
  height: 100%;
  border-left: 2rpx solid #cdcdcd;
  left: 50%;
  top: 0;
}

.confirm_btn {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  height: 100%;
}

.btn {
  width: 255rpx !important;
  height: 80rpx !important;
  background: white;
  border: none;
  font-weight: normal;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  margin: 0;
  padding: 0;
}

.btn::after {
  border: none;
}
