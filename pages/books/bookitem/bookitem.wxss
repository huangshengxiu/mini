/* pages/books/bookitem/bookitem.wxss */
.wrapper{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  background: whitesmoke;
  margin-top: 20rpx;
}

.book_img{
  width: 160rpx;
  padding-left: 30rpx;
}

.book_info{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 0rpx 20rpx 50rpx;
}

.book_name{
  font-size: 34rpx;
  font-weight: bold;
}