/* pages/detail/medicine/medicine.wxss */

page {
  margin: 0;
  padding: 0;
  background: #e9e9e9;
}

view:first-child{
  margin-top: 10rpx;
}

.img {
  width: 100%;
  display: block;
}

.box {
  margin-top: 40rpx;
  background: whitesmoke;
}

.title_img {
  position: relative;
  width: 200rpx;
  height: 60rpx;
  opacity: 0.6;
  display: block;
}

.img_title {
  position: absolute;
  padding-left: 40rpx;
  font-size: 30rpx;
  color: black;
  font-weight: bold;
  line-height: 60rpx;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.content {
  text-indent: 2em;
  padding: 16rpx 20rpx 0rpx 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.footer {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ddd;
  font-size: 24rpx;
}
