/* pages/prescription/prescription.wxss */
@import '../../assets/common/common.wxss';

.item_body {
  width: 100%;
  height: 260rpx;
  display: flex;
  flex-flow: row wrap;
  align-content: space-around;
  background: white;
  border-top: 10rpx solid whitesmoke;
  box-sizing: border-box;
  padding: 18rpx;
}

.item_body .text {
  width: 100%;
  font-size: 26rpx;
  padding: 0rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item_body .title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
