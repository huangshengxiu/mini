/**index.wxss**/

.icon {
  width: 100%;
  height: 400rpx;
  background: #eee;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.iconitem {
  width: 250rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 26rpx;
}

.iconitem image {
  width: 80rpx;
  height: 80rpx;
}

.iconitem view {
  padding: 20rpx;
}

.catagotry {
  width: 100%;
  background: #e6e6e6;
}

.listtitle {
  background: #ddd;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  padding-left: 30rpx;
}

.listitem {
  width: 100%;
  height: 130rpx;
  margin-bottom: 10rpx;
  background: white;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  padding-left: 30rpx;
}

.next {
  display: flex;
  align-items: center;
}

.next image {
  float: right;
  width: 80rpx;
  height: 80rpx;
}

.footer {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #efefef;
  font-size: 24rpx;
}
