/* pages/story/story.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.head {
  height: 110rpx;
}

.content {
  display: flex;
  position: relative;
  flex: 1 1 0;
}

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.title_body {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #efefef;
  border-bottom: 10rpx solid #dadada;
  box-sizing: border-box;
  border-radius: 2rpx;
}

.title {
  padding-left: 30rpx;
}

.next {
  width: 80rpx;
  height: 80rpx;
}

.searchTitle {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: whitesmoke;
}

.searchTxt {
  padding-left: 30rpx;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.important {
  color: lightsalmon;
}

.cancel_btn {
  width: 100rpx;
  height: 50rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
  background: #aaa;
  display: flex;
  justify-content: center;
  align-items: center;
}
